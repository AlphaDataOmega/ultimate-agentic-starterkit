# Ultimate Agentic StarterKit Configuration

# =============================================================================
# API Keys and Authentication
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096

# Anthropic Claude API Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4096

# Hugging Face API Configuration (for embeddings)
HUGGINGFACE_API_KEY=your-huggingface-api-key-here
HUGGINGFACE_MODEL=sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# Logging Configuration
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE_PATH=logs/agentic_starterkit.log

# Enable structured logging (JSON format)
LOG_STRUCTURED=true

# Enable log rotation
LOG_ROTATION=true
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# Voice Alert Configuration
# =============================================================================

# Enable voice alerts
VOICE_ALERTS_ENABLED=true

# Voice properties
VOICE_RATE=200
VOICE_VOLUME=0.7
VOICE_VOICE_ID=0

# =============================================================================
# Agent Configuration
# =============================================================================

# Default confidence thresholds
MIN_CONFIDENCE_THRESHOLD=0.7
HIGH_CONFIDENCE_THRESHOLD=0.9

# Maximum retry attempts
MAX_RETRY_ATTEMPTS=3

# Timeout settings (in seconds)
AGENT_TIMEOUT=300
TASK_TIMEOUT=600

# =============================================================================
# Development Settings
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode
DEBUG=true

# Test mode (disables actual API calls)
TEST_MODE=false

# =============================================================================
# Project Configuration
# =============================================================================

# Project working directory
PROJECT_WORK_DIR=./workspace

# Temporary files directory
TEMP_DIR=./temp

# Output directory
OUTPUT_DIR=./output

# =============================================================================
# Performance Settings
# =============================================================================

# Async concurrency limit
ASYNC_CONCURRENCY_LIMIT=10

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=60

# Memory monitoring
MEMORY_LIMIT_MB=2048