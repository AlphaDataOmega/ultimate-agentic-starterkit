FROM python:3.11-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    DEBIAN_FRONTEND=noninteractive

# Set work directory
WORKDIR /app

# Install system dependencies including development tools
RUN apt-get update && apt-get install -y \
    # Basic build tools
    build-essential \
    gcc \
    g++ \
    make \
    # Audio libraries for pyttsx3
    espeak \
    espeak-data \
    libespeak-dev \
    pulseaudio \
    alsa-utils \
    # Development tools
    curl \
    wget \
    git \
    vim \
    htop \
    tree \
    # Code quality tools
    shellcheck \
    # Cleanup
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN groupadd -r developer && useradd -r -g developer developer

# Create necessary directories
RUN mkdir -p /app/logs /app/workspace /app/temp /app/output \
    && chown -R developer:developer /app

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies including development tools
RUN pip install --no-cache-dir -r requirements.txt

# Install additional development dependencies
RUN pip install --no-cache-dir \
    ipython \
    ipdb \
    jupyter \
    notebook \
    jupyterlab \
    pre-commit \
    bandit \
    safety

# Copy source code
COPY . .

# Fix permissions
RUN chown -R developer:developer /app

# Switch to non-root user
USER developer

# Create directories that might be needed
RUN mkdir -p logs workspace temp output

# Set Python path
ENV PYTHONPATH=/app:$PYTHONPATH

# Install pre-commit hooks
RUN git init . && pre-commit install --install-hooks || true

# Default command for development
CMD ["tail", "-f", "/dev/null"]